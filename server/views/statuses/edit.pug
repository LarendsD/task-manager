extends ../layouts/application.pug

block header
  = t('layouts.application.updateStatus')

block content
  +formFor()(action=`/statuses/${status.id}` method='post')
    input(type="hidden" name="_method" value="PATCH")
    +input(status, 'name', value =t('views.statuses.name'), errors)(type="text", value = status.name)
    +submit(status)(value=t('views.statuses.update'))