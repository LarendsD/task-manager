extends ../layouts/application.pug

block header
  = t('layouts.application.labels')
block content
  a.btn.btn-primary(href='labels/new' role='button')= t('views.labels.createLabel')
  table.table.table-dark.table-striped
    thead
      tr
        th= t('views.labels.id')
        th= t('views.labels.name')
        th= t('views.labels.createdAt')
        th= t('views.labels.actions')
    tbody
      each label in labels
        tr
          td= label.id
          td= label.name
          td= formatDate(label.createdAt)
          td
            .btn-group(role='group' aria-label='Basic mixed styles example')
              a.btn.btn-primary(href=`/labels/${label.id}/edit` role='button')= t('views.labels.update')
              +buttonTo(`/labels/${label.id}`, 'delete')(class="btn btn-outline-danger me-2" value= t('views.labels.delete'))